general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        color_good = '#2f343f'
        color_degraded = '#ebcb8b'
        color_bad = '#ba5e57'
}

general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 1
}

order += "cpu_temperature 0"
order += "load"
order += "memory"
order += "disk /"
order += "wireless wlp1s0"
order += "ethernet enx1"
order += "ethernet enxf8e43b975e25" 
order += "volume master"
order += "battery 0"
order += "tztime local"

cpu_temperature 0 {
        format = "<span background='#ff5555'>  </span><span background='#e5e9f0'> %degrees °C </span>"
        max_threshold = 75
        path = "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon5/temp1_input"
}

load {
        format = "<span background='#50fa7b'> 󰄪 </span><span background='#e5e9f0'> %5min Load </span>"
}

memory {
        format = "<span background='#f58142'> 󰍛 </span><span background='#e5e9f0'> RAM: %used/%total </span>" 
        memory_used_method = classical
}

disk "/" {
        format = "<span background='#f1fa8c'> 󰨣 </span><span background='#e5e9f0'> /: %percentage_used Used (%free Free) </span>"
}

wireless wlan0 {
        format_up = "<span background='#bd93f9'> 󱚽 </span><span background='#e5e9f0'> WiFi: %ip (%quality at %essid) </span>"
        format_down = "<span background='#bd93f9'> 󰖪 </span><span background='#e5e9f0'> WiFi: Down </span>"
}

wireless wlp1s0 {
        format_up = "<span background='#bd93f9'> 󱚽 </span><span background='#e5e9f0'> WiFi: %ip (%quality at %essid) </span>"
        format_down = "<span background='#bd93f9'> 󰖪 </span><span background='#e5e9f0'> WiFi: Down </span>"
}

ethernet enx1 {
        format_up = "<span background='#88c0d0'> 󰩠 </span><span background='#e5e9f0'> Eth: %ip (%speed) </span>"
        format_down = "<span background='#88c0d0'> 󰅛 </span><span background='#e5e9f0'> Eth: Down </span>"
}

ethernet enxf8e43b975e25 {
        format_up = "<span background='#88c0d0'> 󰩠 </span><span background='#e5e9f0'> Eth: %ip (%speed) </span>"
        format_down = "<span background='#88c0d0'> 󰅛 </span><span background='#e5e9f0'> Eth: Down </span>"
}

volume master {
        format = "<span background='#ff79c6'> 󰕾 </span><span background='#e5e9f0'> %volume </span>"
        format_muted = "<span background='#ff79c6'> 󰸈 </span><span background='#e5e9f0'> Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        last_full_capacity = true
        format = "<span background='#a3be8c'> 󰁿 %status %percentage </span>"
        format_down = "<span background='#a3be8c'> 󱉝 No Battery </span>"
        status_chr = "Charging"
        status_bat = "Battery"
        status_unk = "Unknown"
        status_full = "Charged"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "<span background='#8be9fd'> 󰃰 </span><span background='#e5e9f0'>  %a %-d %b %H:%M:%S </span>"
        timezone = "America/Chicago"
}
